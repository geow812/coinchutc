<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PartieActivity" >

    <TextView
        android:id="@+id/joueur1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/joueur1" />

    <TextView
        android:id="@+id/joueur2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/joueur2" />

    <TextView
        android:id="@+id/joueur3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/joueur3" />

    <TextView
        android:id="@+id/joueur4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/joueur4" />

    <LinearLayout
        android:id="@+id/cartesjoueur1"
        android:layout_width="wrap_content"
        android:layout_above="@+id/joueur1"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/carte1"
            android:contentDescription="@string/carte"
            android:layout_height="50dp"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:src="@drawable/carreau10" 
            />
        <ImageView
            android:id="@+id/carte2"
            android:contentDescription="@string/carte"
            android:layout_height="50dp"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:src="@drawable/carreau10"
             />
        <ImageView
            android:id="@+id/carte3"
            android:contentDescription="@string/carte"
            android:layout_height="50dp"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:src="@drawable/carreau10"
             />
        <ImageView
            android:id="@+id/carte4"
            android:contentDescription="@string/carte"
            android:layout_height="50dp"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:src="@drawable/carreau10"
             />
        <ImageView
            android:id="@+id/carte5"
            android:contentDescription="@string/carte"
            android:layout_height="50dp"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:src="@drawable/carreau10"
             />
        <ImageView
            android:id="@+id/carte6"
            android:contentDescription="@string/carte"
            android:layout_height="50dp"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:src="@drawable/carreau10"
             />
        <ImageView
            android:id="@+id/carte7"
            android:contentDescription="@string/carte"
            android:layout_height="50dp"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:src="@drawable/carreau10"
             />
        <ImageView
            android:id="@+id/carte8"
            android:contentDescription="@string/carte"
            android:layout_height="50dp"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:src="@drawable/carreau10"
             />
        
    </LinearLayout>
    
    <RelativeLayout 
       android:id="@+id/tapis"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:textColor="@color/black" 
    	android:layout_centerInParent="true"
    	android:background="@color/greenLight"
		android:layout_toRightOf="@id/joueur2"
		android:layout_toLeftOf="@id/joueur4"
		android:layout_below="@id/joueur3"
		android:layout_above="@id/cartesjoueur1"
		android:layout_marginRight="10dp"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="30dp"
    	android:layout_marginBottom="30dp"
    	 >
        
    </RelativeLayout>

</RelativeLayout>